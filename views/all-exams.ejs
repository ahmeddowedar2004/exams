<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Exams</title>
    <link rel="stylesheet" href="/css/build.min.css" />
  </head>
  <body class="bg-gray-100">
    <div class="container mx-auto py-8">
      <h1 class="text-3xl font-bold text-center mb-6">All Exams</h1>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% exams.forEach(exam => { %>
        <div class="bg-white shadow-md rounded-lg p-4">
          <h2 class="text-xl font-semibold mb-2"><%= exam.title %></h2>
          <p class="text-sm text-gray-600 mb-2">Owner: <%= exam.name %></p>
          <p class="text-sm text-gray-600 mb-2">
            Questions: <%= exam.questions.length %>
          </p>
          <p class="text-sm text-gray-600 mb-2">
            Status: <%= exam.isApproved ? 'Approved' : 'Pending Approval' %>
          </p>
          <div class="flex justify-between items-center mt-4">
            <a
              href="/admin/view-exam/<%= exam.id %>"
              class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
              View
            </a>
            <div class="flex space-x-2">
              <form action="/admin/approve-exam/<%= exam.id %>" method="POST">
                <button
                  class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">
                  Approve
                </button>
              </form>
              <form action="/admin/delete-exam/<%= exam.id %>" method="POST">
                <button
                  class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600">
                  Delete
                </button>
              </form>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>
