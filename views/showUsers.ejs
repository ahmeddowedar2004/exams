<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Users</title>
    <link rel="stylesheet" href="/css/build.min.css" />
  </head>
  <body>
    <section id="approve-users-section" class="mt-6 admin-section">
      <div class="bg-white p-6 rounded shadow">
        <h3 class="text-xl font-bold text-gray-700 mb-4">approve Users</h3>
        <!-- User Table -->
        <table
          id="userTable"
          class="table-auto w-full text-left border-collapse">
          <thead>
            <tr class="bg-gray-100">
              <th class="px-4 py-2 border">Name</th>
              <th class="px-4 py-2 border">Email</th>
              <th class="px-4 py-2 border">Phone</th>
              <th class="px-4 py-2 border">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach((user) => { %>
            <tr>
              <td class="px-4 py-2 border"><%= user.name %></td>
              <td class="px-4 py-2 border"><%= user.email %></td>
              <td class="px-4 py-2 border"><%= user.phoneNumber %></td>
              <td class="px-4 py-2 border">
                <button
                  class="detailsBtn bg-green-500 text-white px-4 py-2 rounded mr-2"
                  data-id="<%= user.uid %>">
                  Details
                </button>
                <button
                  class="deleteBtn bg-red-500 text-white px-4 py-2 rounded"
                  data-id="<%= user.uid %>">
                  Delete
                </button>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </section>
    <script src="/dist/usersAdmin.bundle.js"></script>
  </body>
</html>
